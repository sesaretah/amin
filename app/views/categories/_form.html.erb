<div class="col-12">
  <%= form_for(@category, html: { class: "card" }) do |f| %>
  <div class="card-header">
    <h4 class="card-title"><%= t :categories_form %></h4>
  </div>
  <div class="card-body">
    <div class="mb-3">
      <label class="form-label"><%= t :category_name %></label>
      <%= f.text_field :name, class: "form-control", placeholder: t(:category_name) %>
    </div>
    <div class="mb-3">
      <label class="form-check form-switch i-b">
        <%= f.check_box :promote, class: "form-check-input"%>
        <span class="form-check-label"><%=t :promote%></span>
      </label>
    </div>
  </div>
  <div class="card-footer text-right">
    <button type="submit" class="btn btn-primary"><%= t :submit %></button>
  </div>
  <% end %>
</div>
